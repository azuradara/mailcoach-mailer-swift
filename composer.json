{
  "name": "dara/mailcoach-mailer-swift",
  "version": "0.1.0",
  "type": "library",
  "description": "The Mailcoach transport for SwiftMailer",
  "keywords": [
    "mailcoach-mailer",
    "swiftmailer"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Aymane Dara Hlamnach",
      "email": "dara-@outlook.jp",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "guzzlehttp/guzzle": "^6.0 || ^7.0",
    "swiftmailer/swiftmailer": "^6.0"
  },
  "require-dev": {
    "pestphp/pest": "^1.20",
    "mockery/mockery": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Dara\\MailcoachMailerSwift\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dara\\MailcoachMailerSwift\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
